var reverse = function(x) {
    let string = x.toString();
    let negative = false;
    let newNumber = ``;

    if(string[0] === `-`) {
        negative = true;
        string = string.slice(1);
    }

    for(let i=(string.length - 1); i>=0; i--) {
        newNumber += string[i];
    }
    
    newNumber = Number(newNumber);

    if(negative) newNumber *= -1;

    if(newNumber > 2147483647 || newNumber < -2147483648) return 0;

    return newNumber;
};